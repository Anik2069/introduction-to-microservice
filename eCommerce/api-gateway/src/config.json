{
  "services": {
    "product": {
      "url": "http://localhost:4001",
      "routes": [
        {
          "path": "/products",
          "methods": ["get"]
        },
        {
          "path": "/product",
          "methods": ["post"]
        },
        {
          "path": "/product/:id",
          "methods": ["get"]
        }
      ]
    },
    "inventory": {
      "url": "http://localhost:4002",
      "routes": [
        {
          "path": "/inventories/:id",
          "methods": ["put"]
        },
        {
          "path": "/inventories/:id/details",
          "methods": ["get"]
        }
      ]
    }
  }
}
