{
  "services": {
    "product": {
      "url": "http://localhost:4001",
      "routes": [
        {
          "path": "/products",
          "methods": ["get"],
          "middlewares": ["auth", "admin"]
        },
        {
          "path": "/product",
          "methods": ["post"]
        },
        {
          "path": "/product/:id",
          "methods": ["get"]
        }
      ]
    },
    "inventory": {
      "url": "http://localhost:4002",
      "routes": [
        {
          "path": "/inventories/:id",
          "methods": ["put"]
        },
        {
          "path": "/inventories/:id/details",
          "methods": ["get"]
        }
      ]
    },
    "auth": {
      "url": "http://localhost:4003",
      "routes": [
        {
          "path": "/registration",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/login",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/verify-email",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/verify-token",
          "methods": ["post"],
          "middlewares": []
        }
      ]
    },
    "user": {
      "url": "http://localhost:4004",
      "routes": [
        {
          "path": "/user/:id",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    }
  }
}
